@{
    ViewBag.Title = "Đăng Ký | GIAYPATIN";
    Layout = "~/Views/Shared/Default.cshtml";
}

@if (TempData["thongbao"] == "thatbai")
{
    <script>
        alert("Đăng ký thất bại !!!...");
    </script>
}
<script>
    function Ktra() {
        if (document.dangky.matkhau.value != document.dangky.nhaplaimatkhau.value)
        {
            alert("Nhập lại mật khẩu không trùng");
            return false;
        }
        return true;
    }
    function Nhapso(e) {
        if ((e.charCode >= 48 && e.charCode <= 58) ||
            (e.charCode == 0))
            return true;
        return false;
    }
</script>
<p class="lead">Đăng Ký</p>
<div class="thumbnail col-md-12">
    <form class="form-horizontal col-md-8 col-lg-offset-2" action="" name="dangky" role="form">
        <p class="lead">Thông tin đăng nhập</p>
        <div class="form-group">
            <div class="form-group">
                <label class="col-sm-10 control-label">Những thông tin có dấu (<span style="color: red">*</span>) là bắt buộc</label>
            </div>
            <label for="tendangnhap" class="col-sm-4 control-label">Tên đăng nhập:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="tendangnhap" value="@ViewBag.tendangnhap" name="tendangnhap" placeholder="Tên đăng nhập" required>
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <div class="form-group">
            <label for="matkhau" class="col-sm-4 control-label">Mật khẩu:</label>
            <div class="col-sm-7">
                <input type="password" class="form-control" id="matkhau" value="@ViewBag.matkhau" name="matkhau" placeholder="Mật khẩu" required>
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <div class="form-group">
            <label for="nhaplaimatkhau" class="col-sm-4 control-label">Nhập lại mật khẩu:</label>
            <div class="col-sm-7">
                <input type="password" class="form-control" id="nhaplaimatkhau" value="@ViewBag.matkhau" name="nhaplaimatkhau" placeholder="Nhập lại mật khẩu" required>
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <p class="lead">Thông tin cá nhân</p>
        <div class="form-group">
            <label for="hoten" class="col-sm-4 control-label">Họ tên:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="hoten" value="@ViewBag.hoten" name="hoten" placeholder="Họ và tên" required>
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <div class="form-group">
            <label for="ngaysinh" class="col-sm-4 control-label">Ngày sinh:</label>
            <div class="col-sm-7">
                <input type="date" class="form-control" id="ngaysinh" value="@ViewBag.ngaysinh" name="ngaysinh" required>
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <div class="form-group">
            <label for="gioitinh" class="col-sm-4 control-label">Giới tính:</label>
            <div class="col-sm-7">
                <input style="width: 12px; height: 12px" type="radio" name="gioitinh" checked value="Nam" />Nam
                <input style="width: 12px; height: 12px;" type="radio" name="gioitinh" value="Nữ" />Nữ
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-4 control-label">Email:</label>
            <div class="col-sm-7">
                <input type="email" class="form-control" id="email" value="@ViewBag.email" placeholder="Email" name="email">
            </div>
            <label class="col-sm-1 control-label"></label>
        </div>
        <div class="form-group">
            <label for="sdt" class="col-sm-4 control-label">Số điện thoại:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="sdt" value="@ViewBag.sdt" placeholder="Số điện thoại" onkeypress="return Nhapso(event);" name="sdt">
            </div>
            <label class="col-sm-1 control-label"></label>
        </div>
        <div class="form-group">
            <label for="diachi" class="col-sm-4 control-label">Địa chỉ:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="diachi" value="@ViewBag.diachi" placeholder="Địa chỉ" name="diachi" required>
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-7 text-right">
                <button type="reset" class="btn btn-primary">Nhập lại</button>
                <button type="submit" onclick="return Ktra();" class="btn btn-primary">Đăng ký</button>
            </div>
        </div>
    </form>
</div>
