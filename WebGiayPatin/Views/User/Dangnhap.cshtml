@{
    ViewBag.Title = "Đăng Nhập | GIAYPATIN";
    Layout = "~/Views/Shared/Default.cshtml";
}

<p class="lead">Đăng nhập</p>
<div class="thumbnail col-md-12">
    <form class="form-horizontal col-md-7 col-lg-offset-2" action="" role="form">
        <p class="lead"></p>
        <input type="hidden" name="url" value="@ViewBag.url" />
        <div class="form-group">
            <div class="form-group">
                <label class="col-sm-11 control-label">Những thông tin có dấu (<span style="color: red">*</span>) là bắt buộc</label>
            </div>
            @if (ViewBag.dangnhap == "thatbai")
            {
                <label class="col-sm-10 control-label" style="color: red">Tên đăng nhập hoặc mật khẩu không đúng</label>
            }
            
            <label for="tendangnhap" class="col-sm-4 control-label">Tên đăng nhập:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="tendangnhap" value="@ViewBag.tendangnhap" name="tendangnhap" placeholder="Tên đăng nhập" required>
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <div class="form-group">
            <label for="matkhau" class="col-sm-4 control-label">Mật khẩu:</label>
            <div class="col-sm-7">
                <input type="password" class="form-control" id="matkhau" value="@ViewBag.matkhau" name="matkhau" placeholder="Mật khẩu" required>
            </div>
            <label class="col-sm-1 control-label">(<span style="color: red">*</span>)</label>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-7 text-right">
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
            </div>
        </div>
    </form>
</div>